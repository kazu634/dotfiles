  email = simoom634@yahoo.co.jp
[color]
  # colorの設定(以下のコマンドは自動で色つける)
  status = auto
  diff = auto
  branch = auto
  interactive = auto
  grep = auto
[core]
  excludesfile = ~/.gitignore  # globalな.gitignoreの指定
  editor = /usr/bin/vim
[alias]
  # log関連
  logg = log --stat --pretty=format:'%C(yellow)%h %Cgreen%ar %C(cyan)%an %Creset%s %Cred%d'
  # log + graph
  graph = log --graph --pretty=format:'%C(yellow)%h%C(cyan)%d%Creset %s %C(white)- %an, %ar%Creset'
  # status
  st = status -s -b
  # init, add, and commit
  prep = !git init && git add . && git commit -m \"initial commit\"
